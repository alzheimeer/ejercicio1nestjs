{
  "name": "MSUsers",
  "version": "3.0.0",
  "description": "Proyecto de microservicio de usuarios con lineamientos clean architecture",
  "author": "Oscar Alvarez",
  "modified": "Carlos Mauricio Quintero",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "sonar-scanner": "sonar-scanner -Dsonar.host.url=http://sonarqube-pruebad.apps.claro.co/",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@claro/logging-library": "^1.0.0",
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "9.4.3",
    "@nestjs/core": "9.4.3",
    "@nestjs/microservices": "9.4.3",
    "@nestjs/mongoose": "10.0.1",
    "@nestjs/platform-express": "9.4.3",
    "@nestjs/swagger": "7.1.13",
    "@nestjs/terminus": "10.1.1",
    "async-local-storage": "^2.3.1",
    "axios": "^1.6.2",
    "cache-manager": "5.2.4",
    "class-transformer": "^0.5.1",
    "class-validator": "0.14.0",
    "cls-rtracer": "^2.6.0",
    "elastic-apm-node": "^3.44.1",
    "moment": "^2.29.1",
    "mongoose": "7.6.1",
    "nats": "^2.1.0",
    "oracledb": "^6.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "sonar-scanner": "^3.1.0",
    "swagger-ui-express": "^5.0.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@nestjs/cli": "10.1.18",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "9.4.3",
    "@types/cache-manager": "^3.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.0.0",
    "@types/oracledb": "^6.0.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "jest": "29.7.0",
    "jest-junit": "^15.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^3.0.3",
    "supertest": "^6.1.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest-junit": {
    "suiteName": "UnitTest",
    "outputDirectory": "./coverage",
    "outputName": "test-report.xml",
    "uniqueOutputName": "false",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/test",
      "/common/utils/utils.ts",
      "/coverage/",
      ".*\\.module\\.ts$",
      ".*\\.interceptor\\.ts$",
      "/src/main.ts",
      "src/controller/interceptor/.*",
      "src/controller/dto/.*",
      "src/data-provider/model/.*",
      "./.eslintrc.js"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
